{
  "name": "tome",
  "version": "0.3.1",
  "description": "A Calibre-integrated book tracker",
  "homepage": "https://github.com/masonfox/tome",
  "author": "Mason Fox <masonfox22@gmail.com> (https://github.com/masonfox)",
  "funding": "https://www.buymeacoffee.com/masonfox",
  "keywords": [
    "calibre",
    "books",
    "book tracker",
    "reading"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "db:migrate": "bun run ./lib/db/migrate.ts",
    "db:backup": "bash scripts/backup-database.sh",
    "db:restore": "bash scripts/restore-database.sh",
    "db:list-backups": "bash scripts/list-backups.sh",
    "db:generate": "DATABASE_PATH=./data/tome.db bunx drizzle-kit generate",
    "db:push": "DATABASE_PATH=./data/tome.db bunx drizzle-kit push",
    "db:studio": "DATABASE_PATH=./data/tome.db bunx drizzle-kit studio",
    "db:seed": "bun run scripts/seed.ts",
    "sync-calibre": "bun run scripts/sync-calibre.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage"
  },
  "dependencies": {
    "@mdxeditor/editor": "^3.52.1",
    "@tailwindcss/typography": "^0.5.19",
    "@tanstack/react-query": "^5.90.12",
    "clsx": "^2.1.0",
    "date-fns": "^3.3.0",
    "date-fns-tz": "^3.2.0",
    "drizzle-orm": "^0.44.7",
    "lucide-react": "^0.344.0",
    "next": "^14.2.0",
    "pino": "^9.3.1",
    "pino-http": "^9.0.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "react-markdown": "^10.1.0",
    "recharts": "^2.12.0",
    "rehype-raw": "^7.0.0",
    "rehype-sanitize": "^6.0.0",
    "remark-gfm": "^4.0.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^2.2.0"
  },
  "devDependencies": {
    "@tanstack/react-query-devtools": "^5.91.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/bun": "^1.3.2",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.0.1",
    "drizzle-kit": "^0.31.7",
    "eslint": "^8",
    "eslint-config-next": "^14.2.0",
    "happy-dom": "^20.0.10",
    "pino-pretty": "^11.2.0",
    "postcss": "^8",
    "tailwindcss": "^3.4.0",
    "typescript": "^5"
  },
  "optionalDependencies": {
    "better-sqlite3": "^12.4.1"
  },
  "overrides": {
    "pino": "^9.3.1"
  },
  "pnpm": {
    "patchedDependencies": {}
  }
}
